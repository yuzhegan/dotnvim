-- Load custom tree-sitter grammar for org filetype
require('orgmode').setup_ts_grammar()

local parser_config = require "nvim-treesitter.parsers".get_parser_configs()
parser_config.org = {
  install_info = {
    url = 'https://github.com/milisims/tree-sitter-org',
    revision = 'main',
    files = {'src/parser.c', 'src/scanner.cc'},
  },
  filetype = 'org',
}

require'nvim-treesitter.configs'.setup {
  -- If TS highlights are not enabled at all, or disabled via `disable` prop, highlighting will fallback to default Vim syntax highlighting
  highlight = {
    enable = true,
    disable = {'org'}, -- Remove this to use TS highlighter for some of the highlights (Experimental)
    additional_vim_regex_highlighting = {'org'}, -- Required since TS highlighter doesn't support all syntax features (conceal)
  },
  ensure_installed = {'org'}, -- Or run :TSUpdate org
}



require('orgmode').setup({
  org_agenda_files = {
    '~/Share/orgmode/*',
  },
  org_default_notes_file = '~/Share/orgmode/refile.org',
  org_agenda_templates = {
    t = {
      description = 'Task',
      template = '* TODO %?\n  SCHEDULED: %T',
      target = '~/Share/orgmode/tasks.org',
    },
    b = {
      description = 'Bookmark',
      template = '* [[%?][<++>]]\n:PROPERTIES:\n:CREATED: %U\n:END:\n\n',
      target = '~/Share/orgmode/bookmarks.org',
    },
    c = {
      description = 'Citation',
      template = '* %?\n  :PROPERTIES: <++>\n  :CREATED: %U\n  :TITLE:     \n  :BTYPE:     \n  :CUSTOM_ID: \n  :AUTHOR:    \n  :YEAR:      \n  :PUBLISHER: \n  :END:\n\n',
      target = '~/Share/orgmode/citations.org',
    }
  },
  org_agenda_start_on_weekday = False,
	org_agenda_start_day = -2,
  org_todo_keywords = {'TODO(t)', 'PROG(p)', '|', 'DONE(d)'}
})


require'compe'.setup({
  source = {
    orgmode = true;
    buffer = true;
  }
})


EOF



